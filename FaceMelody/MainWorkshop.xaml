<Window x:Class="FaceMelody.MainWorkshop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWorkshop" Height="600" Width="960">



    <Grid Name="Main_Grid">

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>

        <Grid Name="Menu_Grid" 
              Grid.Row="0" Grid.Column="0"
              Background="#ecf0f1" ShowGridLines="False">
            <Menu>
                <MenuItem Header="文件">
                    <MenuItem Header="打开"/>
                    <MenuItem Header="保存"/>
                    <MenuItem Header="退出"/>
                </MenuItem>
                <MenuItem Header="编辑"/>
                <MenuItem Header="素材库">
                    <MenuItem Header="添加素材" Click="AddMaterial_Click"/>
                    <MenuItem Header="浏览素材" />
                </MenuItem>
                <MenuItem Header="帮助">
                    <MenuItem Header="使用指南"/>
                    <MenuItem Header="关于"/>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid Name="Function_Grid" 
              Grid.Row="1" Grid.Column="0"
              Background="#303037" ShowGridLines="False">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" BorderThickness="10" BorderBrush="White">
            </Border>
            <Border Grid.Row="0" Grid.Column="1" BorderThickness="10" BorderBrush="White">
            </Border>
            <Border Grid.Row="0" Grid.Column="2" BorderThickness="10" BorderBrush="White">
            </Border>

            <Grid Name="Material_Grid" 
              Grid.Row="1" Grid.Column="0"
              Background="#303037" ShowGridLines="False">
                <StackPanel Name="Material_StackPanel" HorizontalAlignment="Left" Height="5" Margin="0,0,0,0" VerticalAlignment="Top" Width="130"/>

            </Grid>

            <Grid Name="Display_Grid" 
              Grid.Row="1" Grid.Column="1"
              Background="#303037" ShowGridLines="False">
            </Grid>

            <Grid Name="Information_Grid" 
              Grid.Row="1" Grid.Column="2"
              Background="#303037" ShowGridLines="False">
            </Grid>

        </Grid>

        <Grid Name="Timeline_Grid" 
              Grid.Row="2" Grid.Column="0"
              Background="#303037" ShowGridLines="False">
            <Image Source=".\Icon\EffectOff_Icon.png" Stretch="Fill" HorizontalAlignment="Left" Margin="5,35,0,0" VerticalAlignment="Top" Height="20" Width="20" />
            <Image Name="AreaChoice_Image" MouseDown="AreaChoice_Image_MouseDown" Source=".\Icon\EffectOff_Icon.png" 
                   Stretch="Fill" HorizontalAlignment="Left" Margin="5,65,0,0" VerticalAlignment="Top" Height="20" Width="20" />
            <Image Source=".\Icon\EffectOff_Icon.png" Stretch="Fill" HorizontalAlignment="Left" Margin="5,95,0,0" VerticalAlignment="Top" Height="20" Width="20" />
            <Image Source=".\Icon\EffectOff_Icon.png" Stretch="Fill" HorizontalAlignment="Left" Margin="5,125,0,0" VerticalAlignment="Top" Height="20" Width="20" />
            <Image Source=".\Icon\EffectOff_Icon.png" Stretch="Fill" HorizontalAlignment="Left" Margin="5,155,0,0" VerticalAlignment="Top" Height="20" Width="20" />
            <Canvas Name="Timeline_Canvas" MouseLeftButtonDown="Timeline_Canvas_Click" 
                    MouseMove="Timeline_Canvas_MouseMove" 
                    MouseUp="Timeline_Canvas_MouseUp"
                    HorizontalAlignment="Left" Height="170" Margin="55,30,0,0" VerticalAlignment="Top" Width="900" Background="#202020"/>
        </Grid>

    </Grid>

</Window>
