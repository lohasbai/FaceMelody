function MyVideoReader( filepath )
%VIDEOREADER 读取视频并分离视频与音频轨道
%   INPUT:
%   filepath - 文件路径与文件名

    %part1 - 分离音频
    [audio_,rate_] = audioread(filepath);
    audiowrite('tmp_wavinfo_no_sync.wav',audio_,rate_);
    
    %part2 - 读取视频
    obj = VideoReader(filepath);
    secs = obj.Duration;
    secs = floor(secs);
    sample = floor(secs / 3);
    for i = 1:sample
        sample_tick = floor(FrameRate * (i-1)*3+2);
        img = readframe(obj,sample_tick);
    end
end

